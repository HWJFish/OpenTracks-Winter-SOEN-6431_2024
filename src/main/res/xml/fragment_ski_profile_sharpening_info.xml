<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="Last Sharpening Date">

        <Preference
            android:key="last_sharpening_date"
            android:title="Select Date"
            android:summary="Tap to select the last sharpening date"
            />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="Sharpening info">

        <EditTextPreference
            android:key="sharpening_interval"
            android:title="Sharpening Interval (km)"
            android:summary="Enter the sharpening interval for the skis (in km)"
            android:dialogTitle="Enter sharpening Interval"
            android:inputType="numberDecimal"
            android:defaultValue="30" />

        <ListPreference
            android:key="base_angle"
            android:title="Base Angle"
            android:summary="Base angle being used"
            android:entries="@array/base_angle"
            android:entryValues="@array/base_angle"
            android:defaultValue="degrees"/>

        <ListPreference
            android:key="edge_angle"
            android:title="Edge Angle"
            android:summary="Edge angle being used"
            android:entries="@array/edge_angle"
            android:entryValues="@array/edge_angle"
            android:defaultValue="degrees"/>
    </PreferenceCategory>

</PreferenceScreen>